<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
</head>

<body>
  <header>
    <nav>
      <ul>
        <li>
          <a href="/authors">Authors</a>
        </li>

        <li>
          <a href="/books/new">New Book</a>
        </li>
      </ul>
    </nav>
  </header>

  <main>
    <section>
      <table>
        <thead>
          <th>title</th>
          <th>author</th>
          <th>pages</th>
          <th>year</th>
          <th>publisher</th>
          <th>actions</th>
        </thead>

        <tbody>
          <% for (const book of books) { %>
            <tr>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.author.name %>
              </td>
              <td>
                <%= book.pages %>
              </td>
              <td>
                <%= book.year %>
              </td>
              <td>
                <%= book.publisher %>
              </td>
              <td>Future Actions</td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </section>
  </main>
</body>

</html>
